<div class="page-header">
  <h1>
    Action steps
    <a href="/action_steps/new" class="btn btn-lg btn-success">New Action step</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Description</th>
        <th>Specifics of implementation</th>
        <th>Resource</th>
        <th>Measure</th>
        <th>Actions</th>
      </tr>

      <% @action_steps.each do |action_step| %>
      <tr>
        <td><%= action_step.description %></td>
        <td><%= action_step.specifics_of_implementation %></td>
        <td><%= action_step.resource.created_at %></td>
        <td><%= action_step.measure.created_at %></td>
        <td>
          <a href="/action_steps/<%= action_step.id %>" class="btn btn-primary">Show</a>
          <a href="/action_steps/<%= action_step.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_action_step/<%= action_step.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @action_steps, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
